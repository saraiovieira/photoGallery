html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Login
        link(rel='stylesheet' href='/public/login.css')
    body 
        main.container
            .img-container
                img.gallery-img(src='https://images.unsplash.com/photo-1549368245-2dd7d4595a89?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=714&q=80' alt='Porto')
            .form-container
                h1 Porto Gallery
                h2 Log in to your account
                form(action="/login" method="post")
                    label(for='email') Email
                    input.email(type='email' name='email')
                    label(for='password') Password
                    input.password(type='password' name='password')
                    button.btn(type='submit') Login
                    p.err=errors
